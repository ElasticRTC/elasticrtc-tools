{
  "variables" :{
    "openstack_username" : "",
    "openstack_password" : "",
    "openstack_tenant" : "",
    "source_image" : "",
    "image_name" :"",
    "image_username" : "ubuntu",
    "image_flavor" : "m1.small",
    "floating_ip_pool" : ""
  },
  "builders" : [
    {
      "type" : "openstack",
      "username" : "{{user `openstack_username`}}",
      "password" : "{{user `openstack_password`}}",
      "tenant_name" : "{{user `openstack_tenant`}}",
      "source_image" : "{{user `source_image`}}",
      "image_name" : "{{user `image_name`}}",
      "ssh_username" : "{{user `image_username`}}",
      "flavor" : "{{user `image_flavor`}}",
      "use_floating_ip" : "true",
      "floating_ip_pool" : "{{user `floating_ip_pool`}}"
    }
  ],
  "provisioners": [
    {
      "type": "chef-solo",
      "cookbook_paths": ["{{user `kurento_cookbooks`}}"],
      "run_list": ["recipe[kurento::kurento-container]"],
      "execute_command" : "{{if .Sudo}}sudo {{end}}chef-solo  --no-color -c {{.ConfigPath}} -j {{.JsonPath}} -l debug"
    }
  ]
}
